                <!--                    vn.xdeuhug.luckyMoney:layout_gravity="end|center_vertical|center_horizontal|center"-->
                <!--                    vn.xdeuhug.luckyMoney:layout_marginStart="@dimen/dp_8"-->
                <!--                    vn.xdeuhug.luckyMoney:layout_marginEnd="@dimen/dp_8"-->
                <!--                    vn.xdeuhug.luckyMoney:background="@drawable/ripple_animation_button_back_header"-->
                <!--                    vn.xdeuhug.luckyMoney:scaleType="center"-->
                <!--                    vn.xdeuhug.luckyMoney:src="@drawable/ic_download"-->
                <!--                    vn.xdeuhug.luckyMoney:visibility="visible" />-->

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>

    </FrameLayout>
